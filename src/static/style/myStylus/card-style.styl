.allMain
  border 1px solid white
  padding 0 3%
  a
    cursor pointer
  .row
    a
      color black
  .cards
    display flex
    justify-content space-between
    -webkit-justify-content space-between
    padding-top 2%
    input
      background-color white
    .calendar
      input[type=text]
        display none
    a
      padding-top 1.6%
      &:hover
        color red

.card
  -webkit-box-shadow none !important
  -moz-box-shadow none !important
  box-shadow none !important
  border 1px solid #e0dede !important
  &:hover
    img
      opacity 0.9

  .card-content
    font-weight normal
    mso-ansi-font-weight normal
    mso-bidi-font-weight normal
    font-size .9em
    mso-ansi-font-size .9em
    mso-bidi-font-size .9em
  .card-title
    font-size 1.1em
    mso-ansi-font-size 1.1em
    mso-bidi-font-size 1.1em
    font-weight bold
    mso-ansi-font-weight bold
    mso-bidi-font-weight bold
    white-space pre
    overflow hidden
    text-overflow ellipsis
    -ms-text-overflow ellipsis

  .card-image
    position relative
    text-align center
    height 170px

    img
      width 100%
      height 100%

    i
      position absolute
      top 5%
      right 5%
      color white
      font-size 1.5em
      opacity 0
      -webkit-transition opacity .3s linear
      -moz-transition opacity .3s linear
      -ms-transition opacity .3s linear
      -o-transition opacity .3s linear
      transition opacity .3s linear
      &:hover
        color red
        cursor pointer
  &:hover
    i
      opacity 1
    span
      color red


  .price-begin
    background #fc0
    color black
    position absolute
    bottom 0
    right 0


    label
      padding 5px 20px
      color black

