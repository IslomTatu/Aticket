footer
  .container-fluid
    background-color #f7f5f5
    padding 0 2%
    .row
      -webkit-box-shadow none !important
      -moz-box-shadow none !important
      box-shadow none !important
      border none !important
    .foot-head-text
      font-weight bolder
      font-size 1.1em

    .email
      padding-top 6%
      input
        width 90% !important
        height 30px !important
        outline-color #fc0 !important
        -moz-outline-color #fc0 !important
        &:focus
          border 2px solid #fco !important
          -webkit-box-shadow none !important
          -moz-box-shadow none !important
          box-shadow none !important
        &:hover
          border 1px solid #fc0 !important
      input[type=email]
        padding-left 5%
        border 1px solid #999999
        border-bottom 1px solid #fco !important
        -webkit-box-shadow none !important
        -moz-box-shadow none !important
        box-shadow none !important
        &:focus
          border 1px solid #fc0

    .dale
        margin-top 1.5%
       .btn
         border 1px solid #fc0
         -webkit-border-radius 5%
         -moz-border-radius 5%
         border-radius 5%
         background-color #fc0
         -webkit-box-shadow none
         -moz-box-shadow none
         box-shadow none
         height 40px
         color black
         text-transform none !important
         padding 0 15%

  .foot-content
    line-height normal
    a
      display block
      cursor pointer
      font-size .9em
      margin-bottom 3%
      &:hover
        color red !important

    .foricon
      display inline !important
      .fa-telegram
        margin-left 4%
      .fa-instagram
        margin-left 4%

    i
      font-size 3em
      margin-top 4%

    .playStore
      width 100%
      img
        width 60%
        height 50%


  .language
    border 1px solid black

    img
      width 100%