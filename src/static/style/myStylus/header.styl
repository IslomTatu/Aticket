header
  .container-fluid
    margin 0 5%
  .row
    border 1px solid white
    border-bottom 1px solid #eeeeee

  .col
    margin-top 1%
    margin-bottom 0



  .logo
    float left
    height 60px
    width 100px
    font-size 3rem
    margin-left 7%
    a
      color black

  .search1
    padding-left 18%
    margin-top 1%
    border none !important
    -webkit-box-shadow none !important
    -moz-box-shadow none !important
    box-shadow none !important
    background none
    input
      width 90% !important
      height 30px !important
      &:focus
        border 1px solid #fco !important
        border-bottom 1px solid #fc0 !important
        -webkit-box-shadow none !important
        -moz-box-shadow none !important
        box-shadow none !important
    input[type=search]
      border 1px solid #eeeeee
      -webkit-box-shadow none !important
      -moz-box-shadow none !important
      box-shadow none !important
      padding-left  5%
      &:focus
        border 1px solid #fc0
        -webkit-box-shadow none !important
        -moz-box-shadow none !important
        box-shadow none !important

    .i-search
      position absolute
      right 25px
      top 5px
      cursor pointer
  .search2
    display none
    margin-top 8%
    height 30px
    border none !important
    -webkit-box-shadow none !important
    -moz-box-shadow none !important
    box-shadow none !important
    background none
    @media screen and (max-width 992px)
      margin-top 2%
      margin-right 5%
      display block
    @media screen and (max-width 700px)
      margin-top 5%

    @media screen and (max-width 550px)
      margin-top 6%

    @media screen and (max-width 500px)
      margin-top 8%

    input
      width 100% !important
      height 30px !important
      &:focus
        border 1px solid #fco !important
        border-bottom 1px solid #fc0 !important
        -webkit-box-shadow none !important
        -moz-box-shadow none !important
        box-shadow none !important
    input[type=search]
      border 1px solid #eeeeee
      -webkit-box-shadow none !important
      -moz-box-shadow none !important
      box-shadow none !important
      padding-left  5%
      &:focus
        border 1px solid #fc0
        -webkit-box-shadow none !important
        -moz-box-shadow none !important
        box-shadow none !important
    .i-search
      position absolute
      right 0
      top 5px
      cursor pointer


  .right-li
    margin-top 0 !important
    #login, #logout
      border none !important
    ul
      list-style-type none

    .list-items
      padding 0 10px
      font-size 1.3em


      img
        width 25px
        height 15px
        border 1px solid #9b9b9b
        -webkit-transition all .3s
        -moz-transition all .3s
        -ms-transition all .3s
        -o-transition all .3s
        transition all .3s
        &:hover
          border 1px solid #fc0
          -webkit-transform scale(1.3, 1.3)
          -moz-transform scale(1.3, 1.3)
          -ms-transform scale(1.3, 1.3)
          -o-transform scale(1.3, 1.3)
          transform: scale(1.3, 1.3)
      .activeLang
        border 1px solid #fc0




    .how
        font-weight normal
        font-size .9em
        margin-right 5%
        margin-top 2%
    .loginList
      padding 0 !important
    .button-login
      background-color white
      width 100px
      margin-top -4%
      padding-left 0
      padding-right 0
      -webkit-box-shadow none
      -moz-box-shadow none
      box-shadow none
      border 1px solid #eeeeee
      -webkit-border-radius 10%
      -moz-border-radius 10%
      border-radius 10%
      text-transform none
      -webkit-transition all 0.1s
      -moz-transition all 0.1s
      -ms-transition all 0.1s
      -o-transition all 0.1s
      transition all 0.1s
      &:hover
        border 1px solid #666666
        -webkit-border-radius 10%
        -moz-border-radius 10%
        border-radius 10%
      i
        color black
        padding-right 5%
        font-size 1em

    a
      text-decoration none
      color black
    .saves
      width 70px
      &:hover
        i
          color #fc0
      .badge
        margin 0 !important
        padding 0 !important
        line-height 18px
        float right
        text-align center
        min-width 1.5em !important
    .logout
      -webkit-box-shadow none
      -moz-box-shadow none
      box-shadow none
      border 1px solid #eeeeee
      -webkit-border-radius 10%
      -moz-border-radius 10%
      border-radius 10%
      padding 0 10px !important
      text-transform none
      -webkit-transition all 0.1s
      -moz-transition all 0.1s
      -ms-transition all 0.1s
      -o-transition all 0.1s
      transition all 0.1s
      &:hover
        color red
        border 1px solid #666666
        .fa-bookmark
          color red
      i
        color #999999
        font-size .9em

    .fa-user
      &:hover
        color black
      padding 10px
      background-color #f7f5f5
      border 1px solid #999999 !important
      -webkit-border-radius 50% !important
      -moz-border-radius 50% !important
      border-radius 50% !important

      @media screen and (max-width 1065px) and (min-width 993px)
        font-size 0.6em
        padding 5px

.userProfile
  display none
  position absolute
  z-index 99999
  width 300px
  padding 10px 20px
  top -10px
  right 20px
  background-color #fff
  line-height 40px
  font-size .8em
  -webkit-box-shadow 5px 5px 50px 10px #999999
  -moz-box-shadow 5px 5px 50px 10px #999999
  box-shadow 5px 5px 50px 2px #999999
  a
    display inline-block
  .row
    &:hover
      a
        color #666666
      i
        color #fc0
.user
  margin-top 0 !important
  position relative
  @media screen and (max-width 1065px) and (min-width 993px)
    margin-top 0 !important