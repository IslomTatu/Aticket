#alonePage
  margin 0 12%
.about-content
  padding 0 2%
  .about-text
    border 1px solid white

  .about-btn
    border-bottom 1px solid #eeeeee
    padding-bottom 1%
    .btns
      display flex
      flex-direction row
      .btn
        padding 0 10%
        background-color #fc0
        color black
        -webkit-box-shadow none
        -moz-box-shadow none
        box-shadow none
        -webkit-border-radius: 5%
        -moz-border-radius: 5%
        border-radius: 5%
      .save
        background-color transparent !important
        border 1px solid #999999 !important
        -webkit-border-radius: 5% !important
        -moz-border-radius: 5% !important
        border-radius: 5% !important
        margin-left 15%
        &:hover
          i
            color red


        i
          margin-left 10px
          font-size 1em


    .icon-btn
      .btn
        background-color transparent
        box-shadow none !important
        border 1px solid #999999
        -webkit-border-radius: 5%
        -moz-border-radius: 5%
        border-radius: 5%
        color black
        padding 0 2% !important
        margin-left 5%
        text-align center
        i
          font-size 2em
          padding 0 2%



  .about-main
    overflow hidden
    .picture
      background-size cover
      margin 0 auto
      img
        width auto
        object-fit contain
        -o-object-fit contain
        height 500px
        z-index 0 !important
        @media screen and (max-width 700px)
          height 300px

    .pictures
      margin 0 auto
      overflow hidden
      img
        height 90px
        object-fit cover
        @media screen and (max-width 700px)
          height 50px
          width auto
          border 1px solid black
#youTube
  iframe
    @media screen and (max-width 986px)
      width 100% !important
      height 325px !important
    @media screen and (max-width 500px)
      width 100% !important
      height 250px !important
.rate
  background-color #fc0
  position relative
  width 90px
  height 60px
  border-right  2px solid #fc0
  .rate-in
    background-color #fc0
    position absolute
    top 12%
    left 75%
    width 43px
    height 45px
    border-right 2px solid #fc0
    border-bottom 2px solid #fc0
    -webkit-transform: rotate(-45deg)
    -moz-transform: rotate(-45deg)
    -ms-transform: rotate(-45deg)
    -o-transform: rotate(-45deg)
    transform: rotate(-45deg)

  .rate-count
      position absolute
      top -10%
      left 20%
      font-weight bold

